#pragma once

#include <qt6/QtGui/QAction>

#include "qt20/Core/Object"

namespace qt20 {
    namespace gui {
        class Action : public QAction {
            public:
                // Good luck for this one
                // explicit Action(Icon &icon, const std::string &text, Object &object)
                explicit Action(const std::string &text, Object &object);
                explicit Action(Object &object);
                explicit Action(const std::string &text);
                Action();
                ~Action() = default;
        };

    } // namespace gui

} // namespace qt20
